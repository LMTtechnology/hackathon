#define powerPin SARA_ENABLE
#define enablePin SARA_TX_ENABLE
#define MODEM_ON_OFF_PIN SARA_ENABLE
Sodaq_N2X n2x;

    String deviceId = "L33ycVs8J9qH9gCFCesTcUmu2q";
